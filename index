        function checkPrediction() {
            let Datainput1 = document.querySelector('#input-1').value.length;
            let Datainput2 = document.querySelector('#input-2').valueAsNumber;

            if (Datainput1!= 0 && Datainput1 <= 5 && Datainput2 <= 8) {
                const randomline1 = myData2love[Math.floor(Math.random() * myData2love.length)]
                output.innerHTML = randomline1

            }

            else if ( Datainput1!= 0 &&Datainput1 <= 5 &&
                Datainput2 <= 16 && Datainput2 > 8) {
                const randomline2 = myData5stupid[Math.floor(Math.random() * myData5stupid.length)]
                output.innerHTML = randomline2
            }

            else if (Datainput1!= 0 && Datainput1 <= 5 &&
                Datainput2 <= 23 && Datainput2 > 16) {
                const randomline3 = myData1negative[Math.floor(Math.random() * myData1negative.length)]
                output.innerHTML = randomline3
            }

            else if (Datainput1 <= 10 && Datainput1 > 5 &&
                Datainput2 <= 8) {
                const randomline4 = myData9finance[Math.floor(Math.random() * myData9finance.length)]
                output.innerHTML = randomline4
            }

            else if (Datainput1 <= 10 && Datainput1 > 5 &&
                Datainput2 <= 16 && Datainput2 > 8) {
                const randomline5 = myData4positive[Math.floor(Math.random() * myData4positive.length)]
                output.innerHTML = randomline5
            }

            else if (Datainput1 <= 10 && Datainput1 > 5 &&
                Datainput2 <= 23 && Datainput2 > 16) {
                const randomline6 = myData8sleep[Math.floor(Math.random() * myData8sleep.length)]
                output.innerHTML = randomline6
            }

            else if (Datainput1 <= 15 && Datainput1 > 10 &&
                Datainput2 <= 8) {
                const randomline7 = myData7travel[Math.floor(Math.random() * myData7travel.length)]
                output.innerHTML = randomline7
            }

            else if (Datainput1 <= 15 && Datainput1 > 10 &&
                Datainput2 <= 16 && Datainput2 > 8) {
                const randomline8 = myData3food[Math.floor(Math.random() * myData3food.length)]
                output.innerHTML = randomline8
            }

            else if (Datainput1 <= 15 && Datainput1 > 10 &&
                Datainput2 <= 23 && Datainput2 > 16) {
                const randomline9 = myData6lalala[Math.floor(Math.random() * myData6lalala.length)]
                output.innerHTML = randomline9
            }

            else if (Datainput1 == 0 && Datainput2>=0 && Datainput2 <=23)
           { alert("Your name needs to have 1 valid character.")}

           else if (Datainput2> 23 && Datainput1 > 0)
           { alert("Please enter a valid hour of the day (0-23).")}

           else if (Datainput2> 23 && Datainput1 == 0)
           { alert("Please enter a valid hour of the day(0-23) and please enter 1 valid character. ")
           }





